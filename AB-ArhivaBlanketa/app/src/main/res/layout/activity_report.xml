<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ab.ssd.ab_arhivablanketa.ReportActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="Report za blanket:" />

        <TextView
            android:id="@+id/txtBlanketReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="12dp"
            android:text="TextView" />

        <EditText
            android:id="@+id/txtKomentarReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtBlanketReport"
            android:layout_below="@+id/txtBlanketReport"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="56dp"
            android:ems="10"
            android:hint="Unesite sta misliste da nije u redu sa blanketom"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btnReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtKomentarReport"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:text="Prijavi" />
    </RelativeLayout>

</ScrollView>

</RelativeLayout>
